<%- include('./shared/header')%>
    <link rel="stylesheet" href="/css/newpost.css">
    <title>EJS Post</title>
    </head>
    <body>
        <div class="container p-5">
            <div class="main text-center my-2 w-50 ">
                <h1>Add New Post</h1>
            </div>
            <div class="form my-5 p-5">
                <% if (errMessage?.length) { %>
                    <div class="alert alert-danger my-2  text-*center">
                        <%=errMessage%>
                    </div>
                    <% } %>
                        <form action="/post/" method="POST" enctype="multipart/form-data">
                            <div class="form-group my-2">
                                <input class="form-control" type="text" name="title" placeholder="Title"
                                    value="<%=oldInputs?.title%>">
                            </div>
                        
                            <div class="form-group my-2">
                                <input class="form-control" type="text" name="caption" placeholder="Caption"
                                    value="<%=oldInputs?.caption%>">
                            </div>
                         
                            <div class="form-group my-2">
                                <input class="form-control" type="file" name="image">
                            </div>
                            
                            <div class="form-group my-2">
                                <button class="btn btn-info w-100" type="submit"> ADD + </button>
                            </div>
                        </form>
            </div>
            <div class="row my-2">
                <% for( let i=0; i < posts.length; i++ ) { %>
                    <div class=" col-md-4  p-2 ">
                        <div class="card m-auto" style="width: 18rem;">
                            <img src="<%=posts[i].image%>" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%=posts[i].title%>
                                </h5>
                                <p class="card-text">
                                    <%=posts[i].caption%>
                                </p>
                                <a href="/post/<%=posts[i]._id%>/getPostToUpdate" class="btn btn-primary">update</a>
                                <a href="/post/<%=posts[i]._id%>/delete" class="ms-2 btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
        <%- include('./shared/script')%>
            <script src="./js/signup.js"></script>
            <%- include('./shared/footer')%>