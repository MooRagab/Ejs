<%- include('./shared/header')%>
    <link rel="stylesheet" href="/css/newpost.css">
    <title>EJS Update Post</title>
    </head>

    <body>

        <div class="container p-5">
            <div class="main text-center my-2 w-50 ">
                <h1>Update Post</h1>
            </div>
            <div class="form my-5 p-5">
                <% if (errMessage?.length) { %>
                    <div class="alert alert-danger my-2  text-*center">
                        <%=errMessage%>
                    </div>
                    <% } %>

                        <form action="/post/<%=post._id%>/update" method="POST" enctype="multipart/form-data">
                            <div class="form-group my-2">
                                <input class="form-control" type="text" name="title" placeholder="Title"
                                    value="<%=post?.title%>">
                            </div>

                            <div class="form-group my-2">
                                <input class="form-control" type="text" name="caption" placeholder="Caption"
                                    value="<%=post?.caption%>">
                            </div>

                            <div class="form-group my-2">
                                <input class="form-control" type="file" name="image">
                            </div>
                            <div class="form-group my-2">
                                <button class="btn btn-info w-100" type="submit"> Update + </button>
                            </div>
                        </form>
            </div>


        </div>


        <%- include('./shared/script')%>
            <script src="./js/signup.js"></script>
            <%- include('./shared/footer')%>